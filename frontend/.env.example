# Environment Variables for Bridge AI+BCI Platform

# Development
NODE_ENV=development
PORT=3000
HTTPS=false

# API Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_AI_SERVICE_URL=http://localhost:8000
REACT_APP_BCI_SIMULATOR_URL=http://localhost:9000

# BCI Configuration
REACT_APP_BCI_ENABLED=true
REACT_APP_BCI_SIMULATION_MODE=true
REACT_APP_BCI_SAMPLE_RATE=250
REACT_APP_BCI_CHANNELS=32

# Analytics
REACT_APP_ANALYTICS_ENABLED=true
REACT_APP_ANALYTICS_DEBUG=true

# Feature Flags
REACT_APP_NEURAL_FEEDBACK_ENABLED=true
REACT_APP_REAL_TIME_MONITORING=true
REACT_APP_ADVANCED_METRICS=true

# App Configuration
REACT_APP_APP_NAME="Bridge AI+BCI Platform"
REACT_APP_VERSION="1.0.0"
REACT_APP_SUPPORT_EMAIL="support@bridge-ai.com"
REACT_APP_CONTACT_EMAIL="hello@bridge-ai.com"

# Demo Configuration
REACT_APP_DEMO_MODE=true
REACT_APP_DEMO_USER_ID="demo-user-001"

# External Services (Development)
REACT_APP_WEBSOCKET_URL=ws://localhost:5001
REACT_APP_CDN_URL=http://localhost:3000

# Security
REACT_APP_SESSION_TIMEOUT=3600000
REACT_APP_ENABLE_CSRF=true

# Logging
REACT_APP_LOG_LEVEL=debug
REACT_APP_LOG_TO_CONSOLE=true