  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.bridge.neuraltraining",
      "id": "com.bridge.neuraltraining"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/bridge-neural-training/id123456789",
      "id": "123456789"
    }
  ],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+bridge",
      "url": "/handle?url=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", "audio/*"]
        }
      ]
    }
  },
  "capture_links": "new-client",
  "display_override": ["window-controls-overlay", "standalone", "browser"],
  "file_handlers": [
    {
      "action": "/open-neural-data",
      "accept": {
        "application/neural-data": [".ndt", ".bci"]
      },
      "icons": [
        {
          "src": "icons/neural-file.png",
          "sizes": "256x256",
          "type": "image/png"
        }
      ],
      "launch_type": "single-client"
    }
  ]
}
